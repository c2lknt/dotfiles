#!/bin/bash
state=$(xrandr -q | grep "0 inverted" || echo "normal")
if [ "$state" == "normal" ]; then
    state="inverted"
    xinput set-float-prop 'ELAN Touchscreen' 136 -1 0 1 0 -1 1 0 0 1
else
    state="normal"
    xinput set-float-prop 'ELAN Touchscreen' 136 1 0 0 0 1 0 0 0 1
fi

xrandr --output eDP1 --rotate $state
